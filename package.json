{
  "name": "ts-game-framework",
  "version": "1.0.0",
  "description": "A framework to build web games based on canvas rendering",
  "main": "build/server.js",
  "scripts": {
    "test": "ts-mocha test/**/*.ts",
    "start": "node build/server.js",
    "test:coverage": "nyc npm t",
    "test:watch": "ts-mocha --watch-extensions ts --watch test/**/*.ts"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcovonly",
      "html"
    ]
  },
  "author": "Oliver Warrings <dev@qhun.de>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/express": "^4.0.36",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.4",
    "@types/socket.io": "^1.4.29",
    "@types/socket.io-client": "^1.4.29",
    "awesome-typescript-loader": "^3.1.3",
    "chai": "^4.0.2",
    "circular-dependency-plugin": "^3.0.0",
    "copy-webpack-plugin": "^4.0.1",
    "express": "^4.15.3",
    "file-loader": "^0.11.2",
    "install": "^0.10.1",
    "istanbul": "^0.4.5",
    "jasmine-ts": "^0.1.3",
    "json-loader": "^0.5.4",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "object-sizeof": "^1.2.0",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "ts-mocha": "^1.0.3",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0"
  }
}
