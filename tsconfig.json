{
    "compilerOptions": {
        "sourceMap": true,
        "baseUrl": "./src",
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "types": [
            // add node as an option
            "node"
        ],
        // typeRoots option has been previously configured
        "typeRoots": [
            // add path to @types
            "node_modules/@types"
        ]
    }
}